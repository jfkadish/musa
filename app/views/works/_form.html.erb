<div class = "offset1" >
  <%= form_for(@work, :html => {:multipart => true}) do |f| %>
    <% if @work.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@work.errors.count, "error") %> prohibited this work from being saved:</h2>

        <ul>
        <% @work.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :Title %>
      <%= f.text_field :title %>
    </div>
    <div class="field" style = "width :100px">
      <%= f.label :Work_Dated %>
      <%= f.date_select :work_dated, {:end_year => 1910, :start_year => 1982, :discard_day => true, :discard_month => true} %>
    </div>
    <div class="field">
      <%= f.label @work.photo %>
      <%= file_field(:work, :photo) %><br>
      <%= image_tag @work.photo.url.thumb %>
    </div>
    <div class="field">
      <%= f.label :Notes %>
      <%= f.text_area :notes %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


</div>