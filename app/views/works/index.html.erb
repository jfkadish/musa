<div>
   <h3>Catalog</h3>
</div>
<div>
  <table class="table table-hover ">
    <tr>
      <th class = "span1">Image</th>
      <th class = "span1">Title</th>
      <th class = "span1">Year</th>
      <th class = "span3">Notes</th>
      <th class = "span1">Acitons</th>

    </tr>
  
  <% @works.each do |work| %>

    <tr >
      <td >
          <%= link_to(work) do %>
             <%= image_tag work.photo.url(:thumb) %>
          <% end %></td>
      <td><%= work.title %></td>
      <td><%= work.work_dated.year %></td>
      <td><%= truncate(work.notes, :length => 17) %></td>
      <td><%= link_to 'Show', work %><br>
      <%= link_to 'Edit', edit_work_path(work) %><br>
      <%= link_to 'Remove', work, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    </tr>
    
  <% end %>
  </table>
<br />

<%= link_to "New Work", new_work_path %>
<%= will_paginate @works %>
</div>
